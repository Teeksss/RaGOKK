# Bu dosyayı .env olarak kopyalayın ve değerlerinizi ayarlayın

# Uygulama
SECRET_KEY=insecure-development-key-change-this
DEBUG=true
LOG_LEVEL=INFO
USE_JSON_LOGGER=false

# Veritabanı ayarları
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ragbase
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# DB Pool Ayarları
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=1800
DB_ECHO=false

# MongoDB Async Ayarları
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=ragbase
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=0
MONGODB_MAX_IDLE_TIME_MS=30000

# MySQL Async Ayarları
MYSQL_POOL_SIZE=5
MYSQL_MAX_OVERFLOW=10

# Elasticsearch
ELASTICSEARCH_HOSTS=http://localhost:9200
ELASTICSEARCH_USER=
ELASTICSEARCH_PASSWORD=
INDEX_NAME=ragbase
VECTOR_DIMENSION=768

# Elasticsearch Optimization
ES_INDEX_SHARDS=1
ES_INDEX_REPLICAS=0
ES_KNN_K=5
ES_KNN_K_MULTIPLIER=2
ES_KNN_NUM_CANDIDATES=50
ES_SEARCH_TIMEOUT=30s
ES_MAX_CONCURRENT_SEARCHES=5
ES_CLIENT_MAX_SIZE=10
ES_CLIENT_TIMEOUT=30
ES_BULK_SIZE=1000
ES_REFRESH_POLICY=wait_for

# Weaviate Vector Database
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=
WEAVIATE_CLASS_NAME=Document
WEAVIATE_BATCH_SIZE=100

# Lokal LLM
LOCAL_LLM_TYPE=ollama  # ollama, huggingface
LOCAL_LLM_MODEL_NAME_OR_PATH=mistralai/Mistral-7B-Instruct-v0.1
LOCAL_LLM_DEVICE=cuda  # cuda, cpu
LLM_MODEL_FAMILY=mistral  # gpt, t5, llama, mistral, phi, falcon
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_NAME=mistral

# API Keys
OPENAI_API_KEY=
COHERE_API_KEY=
JINA_API_KEY=

# Jina Search
JINA_SEARCH_ENDPOINT=https://api.jina.ai/v1/search

# Embeddings
EMBEDDING_PROVIDER=sentence_transformer  # sentence_transformer, openai, cohere, jina
EMBEDDING_BATCH_SIZE=32
EMBEDDING_CACHE_ENABLED=true
EMBEDDING_CACHE_SIZE=1000

# LLM Optimizasyonları
LLM_QUANTIZATION=8bit  # 8bit, 4bit, none
LLM_USE_TORCH_COMPILE=false
LLM_USE_FLASH_ATTENTION=false
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.1

# Hallucination ve Tool Ayarları
HALLUCINATION_THRESHOLD=0.3
TOOL_USAGE_ENABLED=true
TOOL_EXECUTION_TIMEOUT=10

# Retrieval Ayarları
BM25_BOOST=0.5
SEMANTIC_BOOST=0.5
HYBRID_METHOD=rank_fusion  # rank_fusion, rrf, linear_combination
MAX_DOCUMENT_SIZE=1000

# Top-K Genişletme
TOP_K_EXPANSION_ENABLED=true
TOP_K_EXPANSION_DEPTH=2

# Sorgu Genişletme
QUERY_EXPANSION_ENABLED=true
QUERY_EXPANSION_EXTERNAL_API=none  # none, wordnet, nlp_api
QUERY_EXPANSION_LANGUAGES=en,tr

# Çok Dilli Destek
MULTILINGUAL_EMBEDDINGS_ENABLED=true
MULTILINGUAL_EMBEDDINGS_MODEL=paraphrase-multilingual-mpnet-base-v2
SUPPORTED_LANGUAGES=en,tr,de,fr,es,it

# TF-IDF ve BM25 Parametreleri
TFIDF_NORM=l2
TFIDF_USE_IDF=true
BM25_K1=1.2
BM25_B=0.75
BM25_DELTA=0.5

# Kişiselleştirme
PERSONALIZATION_ENABLED=true
PERSONALIZATION_WEIGHT=0.3

# Zaman Filtresi
TIMEFILTER_ENABLED=true

# Önceliklendirme
PRIORITY_CORPORATE_DOCS=1.5
PRIORITY_RECENT_DOCS=1.3
PRIORITY_REVIEWED_DOCS=1.2
PRIORITY_DOMAINS=company.com,internal.org

# Yanıt Format Ayarları
RESPONSE_FORMAT_OPTIONS=default,short_summary,detailed,bullet_points,table,step_by_step
DEFAULT_RESPONSE_FORMAT=default

# Fine-tuning Ayarları
FINE_TUNING_MODEL_BASE=meta-llama/Llama-2-7b-hf
FINE_TUNING_OUTPUT_DIR=./finetuned-models
FINE_TUNING_EPOCHS=3
FINE_TUNING_BATCH_SIZE=8
FINE_TUNING_LEARNING_RATE=3e-5
FINE_TUNING_MAX_LENGTH=512
FINE_TUNING_GRADIENT_ACCUMULATION_STEPS=4

# WebSocket Ayarları
WS_PING_INTERVAL=30

# OAuth ve Harici Servisler
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
GOOGLE_SCOPES=https://www.googleapis.com/auth/drive.readonly

DROPBOX_APP_KEY=
DROPBOX_APP_SECRET=
DROPBOX_REDIRECT_URI=http://localhost:8000/auth/dropbox/callback

TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URI=http://localhost:8000/auth/twitter/callback

# Email Ayarları
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=
EMAIL_SMTP_PASSWORD=
EMAIL_FROM=

# OCR için dil ayarı
OCR_LANGUAGES=tur+eng

# Chunking Ayarları
CHUNK_STRATEGY=recursive  # recursive, token, sentence, paragraph, hybrid
CHUNK_SIZE=1000
CHUNK_OVERLAP=200